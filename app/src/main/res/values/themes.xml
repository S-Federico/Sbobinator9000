<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Sbobinator9000" parent="Theme.MaterialComponents.Light">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item> <!-- Imposta su "true" se il testo deve essere scuro -->
        <!-- Customize your theme here. -->
    </style>
    <style name="ScreenBackground"> <item name="android:background">@color/white</item></style>
    <style name="TextColor"> <item name="android:textColor">@color/black</item></style>
    <style name="Color"> <item name="android:enforceStatusBarContrast">@color/black</item></style>
    <color name="appLabelColor">@color/black</color>
</resources>