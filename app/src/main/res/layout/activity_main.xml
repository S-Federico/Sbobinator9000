<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:weightSum="10">

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:paddingStart="10sp"
        android:textSize="30sp"
        android:text="Recorder" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#aaaaaa"
        android:paddingStart="10sp"
        android:textSize="10sp"
        android:text="3 registration memorizer" />

    <TextView
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:layout_weight="2.2"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/is_recording_tv"
        android:textAlignment="textEnd"
        android:layout_width="match_parent"
        android:text="NOT RECORDING"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:layout_height="wrap_content" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:orientation="vertical"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:weightSum="3"
        android:orientation="horizontal">

        <TextView
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="QUI CI VA IL BOTTONE" />

        <ImageButton
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/recorder_button"
            android:backgroundTint="#ff0000"
            />

        <Button
            android:id="@+id/btn_transcribe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Transcribe" />


    </LinearLayout>

</LinearLayout>